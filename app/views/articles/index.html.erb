<form action="/articles"  method="get" accept-charset="UTF-8">

  <div>
    <label for="query">Query</label>
    <textarea id="query" name="query" placeholder="write here......"></textarea>
  </div>

    <center><button type="submit" >Searchh</button></center>
</form>



<%= form_tag articles_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<%= form_for :search_articles, url: articles_path, method: :get do |form| %>
  <%= form.text_field :query, value: params[:search_articles].presence && params[:search_articles][:query] %>
  <%= form.submit 'Search' %>
<% end %>

<% @articles.each do |article|%>
  <% if @flag %>
    <h1><%= article.title %></h1>
    <p><%= article.content %></p>
  <% else %>
    <h1><%= article["title"] %></h1>
    <p><%= article["content"] %></p>
  <% end %>
<% end %>
